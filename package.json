{
    "name": "dm-js-file-header",
    "displayName": "DM's JavaScript File Header",
    "description": "DM's JavaScript File Header for Documentation",
    "version": "0.1.1",
    "publisher": "dmxl",
    "galleryBanner": {
        "color": "#ffe04b",
        "theme": "light"
    },
    "icon": "icon.jpg",
    "repository": {
        "type": "git",
        "url": "https://github.com/DMXL/js-file-header-vscode"
    },
    "engines": {
        "vscode": "^1.17.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.addJsFileHeader",
        "onLanguage:javascript"
    ],
    "main": "./extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "JS File header Configuration",
            "properties": {
                "jsFileHeader.Author": {
                    "type": "string",
                    "default": "DMXL",
                    "description": "Author name"
                },
                "jsFileHeader.Copyright": {
                    "type": "string",
                    "default": "",
                    "description": "Copyright information"
                },
                "jsFileHeader.License": {
                    "type": "string",
                    "default": "",
                    "description": "License information"
                },
                "jsFileHeader.Email": {
                    "type": "string",
                    "default": "dm@dmon-studio.com",
                    "description": "Author email"
                },
                "jsFileHeader.Description": {
                    "type": "string",
                    "default": "",
                    "description": "File description"
                }
            }
        },
        "commands": [
            {
                "command": "extension.addJsFileHeader",
                "title": "JavaScript: Add File Header"
            }
        ],
        "keybindings": [
            {
                "command": "extension.addJsFileHeader",
                "key": "cmd+alt+h",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.2",
        "vscode": "^1.1.5",
        "mocha": "^3.5.0",
        "eslint": "^4.6.1",
        "@types/node": "^7.0.0",
        "@types/mocha": "^2.2.42"
    }
}
